// }

model User {
  id             String  @id @default(uuid())
  username       String  @unique
  imageUrl       String  @db.Text
  externalUserId String  @unique
  bio            String? @db.Text

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
